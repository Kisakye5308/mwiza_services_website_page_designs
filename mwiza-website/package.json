{
  "name": "mwiza-services-website",
  "version": "1.0.0",
  "description": "Premium luxury event management website for Mwiza Services - Uganda",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/output.css --watch\" \"npx live-server ./src --port=3000 --open=/pages/public/index.html\"",
    "build": "npx tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/output.css --minify",
    "serve": "npx live-server ./src --port=3000 --open=/pages/public/index.html",
    "css:watch": "npx tailwindcss -i ./src/assets/css/input.css -o ./src/assets/css/output.css --watch",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "mwiza",
    "events",
    "luxury",
    "uganda",
    "wedding",
    "corporate"
  ],
  "author": "Mwiza Services",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.0"
  }
}
